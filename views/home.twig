{% extends "layouts/main.twig" %}


{% block title %} <title>Home</title>{% endblock %}


{% block content %}
    <h2 class="title">Products List</h2>

     <section class="products" id="products">

          <div class="action">
               <button class="add-btn">ADD</button>
               <button class="mass-delete-btn" id="delete-product-btn">MASS DELETE</button>
          </div>
          <div class="content">
               {% for item in products %}
                    <div class="card">
                         <input class="delete-checkbox" type="checkbox">
                         <div class="info">
                              <h3>{{ item.get('sku') }}</h3>
                              <h3>{{ item.get('name') }}</h3>
                              <h3>{{ item.get('price') }} $</h3>
                              {% set break = false %}
                              {% for key, attribute in item.attributes %}
                                   {% if loop.first and attribute !=null %}
                                        <h3>{{key}}: {{attribute}}</h3>
                                   {% endif %}
                              {% endfor %}
                         </div>
                    </div>

               {% endfor %}

          </div>
     </section>


{% endblock %}
